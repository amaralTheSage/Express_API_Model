generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:password1900@localhost:3306/API_edecio"
}

model Viagem {
  id Int @id @default(autoincrement())
  destino String
  transporte Transporte @default(TERRESTRE)
  dataSaida String
  preco Float
  duracao Int @db.SmallInt
  @@map("viagens")
}

enum Transporte {
  TERRESTRE
  MARITIMO
  AEREO
}